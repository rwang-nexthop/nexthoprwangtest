set / interface ethernet-1/1 admin-state enable
set / interface ethernet-1/1 subinterface 0
set / interface ethernet-1/1 subinterface 0 ipv4
set / interface ethernet-1/1 subinterface 0 ipv4 admin-state enable
set / interface ethernet-1/1 subinterface 0 ipv4 address 10.0.0.5/31

set / network-instance default
set / network-instance default interface ethernet-1/1.0

set / network-instance default protocols bgp admin-state enable
set / network-instance default protocols bgp group ibgp admin-state enable
set / network-instance default protocols bgp router-id 10.1.0.4
set / network-instance default protocols bgp autonomous-system 65201
set / network-instance default protocols bgp afi-safi ipv4-unicast admin-state enable
set / network-instance default protocols bgp neighbor 10.0.0.4 admin-state enable
set / network-instance default protocols bgp neighbor 10.0.0.4 peer-group ibgp
set / network-instance default protocols bgp neighbor 10.0.0.4 peer-as 65100